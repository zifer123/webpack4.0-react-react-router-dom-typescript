{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@": ["./src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
