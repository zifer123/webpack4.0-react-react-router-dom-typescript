{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/baseStyles/*": ["./src/baseStyles/*"],
      "@/components/*": ["./src/components/*"]
    },
    "typeRoots": [
      "node",
      "node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "src/**/*",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
